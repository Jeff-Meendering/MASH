datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id                Int         @id @default(autoincrement())
    firstName         String
    lastName          String
    bio               String
    createdMeetups    Meetup[]   @relation("createdMeetups")
    futureMeetups     Meetup[]   @relation("futureMeetups")
}

model Meetup {
    id              Int      @id @default(autoincrement())
    author          User     @relation("createdMeetups", fields: [authorId], references: [id])
    authorId        Int
    attendee        User?    @relation("futureMeetups", fields: [attendeeId], references: [id])
    attendeeId      Int?
    title           String
    time            DateTime
    description     String?
    location        String?
    isGroup         Boolean

    @@index([authorId])
    @@index([attendeeId])
}

